{
  "AllowedHosts": "*",


  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.OpenSearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
        //"Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "CSC.MydataApi"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "OpenSearch",
        "Args": {
          "nodeUris": "http://localhost:9201",
          "autoRegisterTemplate": true,
          "indexFormat": "mydata-api-log"
        }
      }
    ]
  }


