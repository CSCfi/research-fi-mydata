@{
    ViewData["Title"] = "Name Input Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Experimental MVC Feature</h1>
<p>Enter your name below to test the form submission and view rendering functionality.</p>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="error">
        @ViewBag.ErrorMessage
    </div>
}

<form method="post" action="/Greeting/Greet">
    <div class="form-group">
        <label for="name">Your Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter your name here..." />
    </div>
    <div class="form-group">
        <button type="submit">Submit</button>
    </div>
</form>

<p><em>This is an experimental feature for testing ASP.NET Core MVC views and forms.</em></p>